<% provide(:title, 'Sign up') %>
<h1>Sign Up!</h1>
<%= form_for @user, :html => {:class => "form-inline", :role => "form"} do |form| %>
  <%= render 'user_form', :f => form %>
  <div>
    <%= form.button "Create new account", :class => "btn btn-primary", :data => {:loading_text => "Loading..."} %>
  </div>
<% end %>
