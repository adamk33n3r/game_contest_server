<% provide(:title, 'Users') %>
<%= link_to "Create a new user", signup_path %>
<% if User.all.empty? %>
  <h2>No Users</h2>
<% else %>
  <h2>List of users:</h2>
  <ol>
    <% @users.each do |user| %>
    <li><%= user.username %> <%= link_to "delete", user, :method => :delete %></li>
    <% end %>
  </ol>
<% end %>
<%= pluralize(User.count, "user") %>