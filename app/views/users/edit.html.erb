<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @user do |f| %>
<div>
  <%= f.label :username %>
  <%= f.text_field :username %>
</div>
<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>
<div>
  <%= f.label :password %>
  <%= f.text_field :password %>
</div>
<div>
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.text_field :password_confirmation %>
</div>
<div>
  <%= f.submit "Update account" %>
</div>
<% end %>