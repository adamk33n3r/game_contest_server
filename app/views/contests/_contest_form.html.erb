<% if @contest.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @contest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :contest_type, "Contest Type" %>
  <%= f.text_field :contest_type, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :referee_id %>
  <%= f.select :referee_id, Referee.all.collect {|r| [ r.name, r.id ] }, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :deadline %>
  <%= f.datetime_select :deadline, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :start %>
  <%= f.datetime_select :start, class: "form-control" %>
</div>
<%= f.submit %>