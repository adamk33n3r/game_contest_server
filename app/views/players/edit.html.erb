<h1>Update Player</h1>
<%= form_for @player do |f| %>
<div class="form-group">
  <%= f.label :name, :class => "sr-only" %>
  <%= f.text_field :name, :class => "form-control", :placeholder => :Name %>
</div>
<div class="form-group">
  <%= f.label :description, :class => "sr-only" %>
  <%= f.text_field :description, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label :upload, "Upload file" %>
  <%= f.file_field :upload, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :playable, "Allow others to compete against this player" %>
  <%= f.check_box :playable, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :downloadable, "Allow others to download this player" %>
  <%= f.check_box :downloadable, class: "form-control" %>
</div>
<%= f.submit "Update Player" %>
<% end %>